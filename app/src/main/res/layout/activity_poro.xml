<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_vectorized"
    tools:context="com.bitspice.pocketporo.PoroActivity">

    <ImageView
        android:id="@+id/mainView"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_above="@+id/poroSnax"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:scaleType="center" />

    <ImageView
        android:id="@+id/heartView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/poroSnax"
        android:layout_toRightOf="@+id/poroSnax"
        android:scaleType="center"
        android:src="@drawable/heart_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/poroSnax"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/snax_vectorized3" />

</RelativeLayout>
